.comment-area
  %h2= 'Mail'
  %div
    .alert.alert-success{:name => 'succsess', :style => 'display:none;'}
      %strong= 'Complete'
      = 'Mailの送信が完了しました。'
    .alert.alert-danger{:name => 'error', :style => 'display:none;'}
      %strong= 'Error'
      = 'すべての項目を入力してください。'
    .form-group
      %label= '名前'
      %input{:name => 'name', :type => 'text', :class => 'form-control', :pleceholder => 'Your name'}
    .form-group
      %label= 'メールアドレス'
      %input{:name => 'address', :type => 'email', :class => 'form-control', :pleceholder => 'Your name'}
    .form-group
      %label= '本文'
      %textarea{:name => 'body', :class => 'form-control', :rows => '20'}
    .form-group
      %button{:class => 'btn btn-default', :onClick => 'post_mail()'}= 'Send'