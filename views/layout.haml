!!! 5
%html{html_attrs('ja')}
	%head
		%meta{:charset => 'utf-8'}
		%title= "#{@page_title}"
		%link{:href => to('/css/bootstrap.css'), :rel => 'stylesheet'}
		%link{:href => to('/css/BlogGem.css'), :rel => 'stylesheet'}
		/[if lt IE 9]
			%script{:src => 'https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'}
			%script{:src => 'https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js'}
	%body
		.title-header
			.container
				%h1
					= "Sinji"
					%span{:style => 'color:coral;'}>= "'"
					= "s View"
					%small= '酒田　シンジの目線'
		.tab
			.container
				%ul.nav.nav-tabs
					- @tab.each do |t|
						%li{:class => t.style}
							- if t.style == 'dropdown' then
								%a(href="#{t.href}" data-toggle='dropdown' class='dropdown-toggle')
									= t.name
									%span.caret
								%ul.dropdown-menu
									- t.dropdown.each do |drop|
										%li{:class => drop.style}
											%a{:href => drop.href}= drop.name
							- else
								%a{:href => t.href}= t.name
		.container
			- if @sidebar == 'active' then
				.col-sm-9
					= yield
				.col-sm-3{:style => 'margin-top:60px;'}
					= haml :_blog_sidebar
			- else
				= yield
		.page-footer
			.container
				%p= "Copyright (C) 2012 - #{@year}&nbsp;&nbsp;Sinji Sakata All Rights Reserved."
				%p= "Powered by #{link_to('https://www.ruby-lang.org/ja/', 'Ruby')}, #{link_to('http://www.sinatrarb.com/', 'Sinatra')} and #{link_to('http://getbootstrap.com/', 'Bootstrap')}."
		%script{:src => 'https://code.jquery.com/jquery.js'}
		%script{:src => to('/js/bootstrap.min.js')}
		%script{:src => to('/js/BlogGem.js')}
