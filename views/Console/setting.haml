.page-header
  %h1= 'Settings'
%form{:role => 'form', :method => 'post', :action => './save'}
  - @setting.each do |key, value|
    .form-inline
      .col-sm-6
        %input.form-control{:name => 'item[]', :type => 'text', :value => key}
      .col-sm-6
        %input.form-control{:name => 'value[]', :type => 'text', :value => value}
  .form-group
    %button.btn.btn-default{:type => 'submit', :value => 'save'}= 'Save'
%form.form-inline{:role => 'form', :method => 'post', :action => './new', :style =>'margin-top:30px;'}
  %label= 'Add setting'
  .form-group
    %input.form-control{:name => 'item', :type => 'text'}
  .form-group
    %input.form-control{:name => 'value', :type => 'text'}
  .form-group
    %button.btn.btn-default{:type => 'submit', :value => 'add'}= 'Add'