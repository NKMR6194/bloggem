    <div class="page-header">
        <h1>Category Edit</h1>
    </div>
    <form role="form" method="post" action="./save">
        <% @category.each do |c| %>
        <div class="form-group">
            <input name="category[]" type="text" class="form-control" value="<%= c.name %>"></input>
        </div>
        <% end %>
        <div class="form-group">
            <button type="submit" value="save" class="btn btn-default">Save</button>
        </div>
    </form>
    <form role="form" method="post" action="./new" style="margin-top:30px;">
        <div class="form-group">
            <label>Add category</label>
            <input name="category" type="text" class="form-control"></input>
        </div>
        <div class="form-group">
            <button type="submit" value="add" class="btn btn-default">Add</button>
        </div>
    </form>